{
  "name": "openvlog-root",
  "private": true,
  "description": "Developer convenience scripts for OpenVulog",
  "scripts": {
    "bootstrap": "npm --prefix backend install && npm --prefix frontend install",
    "build": "docker-compose build",
    "up": "docker-compose up -d",
    "down": "docker-compose down",
    "restart": "npm run down && npm run up",
    "logs": "docker-compose logs -f backend",
    "ps": "docker-compose ps",
    "migrate": "cd backend && npm run migrate",
    "backend:shell": "docker-compose exec backend /bin/sh",
    "frontend:shell": "docker-compose exec frontend /bin/sh",
    "clean": "docker-compose down -v --remove-orphans",
    "prune": "docker system prune -f",
    "tls:hint": "node scripts/dev/tls.js"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/postcss": "^4.1.12",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-day-picker": "^9.9.0",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-router-dom": "^7.8.2",
    "recharts": "^3.1.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "serve": "^14.2.4",
    "shadcn-ui": "^0.9.5",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.12",
    "vite": "^7.1.3",
    "zod": "^4.1.5"
  }
}
