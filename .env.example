# PostgreSQL Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=openvlog

# Backend Configuration
# Derived convenience: postgres://USER:PASSWORD@HOST:PORT/DB
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}
JWT_SECRET=replace_with_strong_secret
# Separate secret for refresh tokens (long-lived)
JWT_REFRESH_SECRET=replace_with_strong_refresh_secret

# Frontend origin for CORS (include scheme)
FRONTEND_ORIGIN=http://localhost:5173

# Frontend Configuration
# Used as build arg for Vite (docker-compose passes as ARG)
VITE_API_BASE_URL=http://localhost:3001/api

# Admin User credentials for create_admin.js
ADMIN_USER=admin
